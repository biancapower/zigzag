<p id="notice"><%= notice %></p>

<span>
  <h1>
    <%= @post.title %>
  </h1>

  <blockquote>
    <%= @post.body %>
  </blockquote>

  <p>
  @<%= @post.user.username %>
  </p>
</span>

<% if user_signed_in? && @post.user_id == current_user.id %>
  <span style="float: right">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </span>
<% end %>
